      },
      "T2": {
        "POI": 0.02,
        "during_evacuation": 0.01,
        "during_treatment": 0.01,
        "cumulative_cap": 0.05
      },
      "T3": {
        "POI": 0.01,
        "during_evacuation": 0.005,
        "during_treatment": 0.005,
        "cumulative_cap": 0.02
      },
      "T4": {
        "POI": 0.00,
        "during_evacuation": 0.00,
        "during_treatment": 0.00,
        "cumulative_cap": 0.00
      }
    }
  },
  "validation_rules": {
    "description": "Rules to ensure realistic patient flow",
    "rules": [
      "T1 patients should have >50% bypass of Role1",
      "T4 patients should have >80% RTD from Role1",
      "Overall mortality should be 5-15% for combat scenarios",
      "Average facility visits should be 2-3 per patient",
      "No patient should visit same facility twice",
      "RTD should only occur after treatment (not from POI)"
    ]
  }
}