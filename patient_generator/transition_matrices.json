      "air": {"mean": 35, "std": 10}
    },
    "Role3_to_Role4": {
      "air": {"mean": 360, "std": 60},
      "comment": "Role4 evacuation typically by strategic air"
    }
  },
  "mortality_checkpoints": {
    "description": "Points where mortality is assessed",
    "checkpoints": [
      "POI",
      "during_evacuation",
      "arrival_at_facility",
      "during_treatment",
      "post_treatment"
